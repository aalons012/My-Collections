<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Andy_Collection"
        tools:targetApi="31">

        <activity
            android:name="edu.alonso.andy_collection.PS2"
            android:exported="false" />
        <activity
            android:name="edu.alonso.andy_collection.Switch2"
            android:exported="false" />
        <activity
            android:name="edu.alonso.andy_collection.SteamDeck"
            android:exported="false" />
        <activity
            android:name="edu.alonso.andy_collection.gamecube"
            android:exported="false" />
        <activity
            android:name="edu.alonso.andy_collection.wii"
            android:exported="false" />
        <activity
            android:name="edu.alonso.andy_collection.console_collection"
            android:exported="false" />
        <activity
            android:name="edu.alonso.andy_collection.About"
            android:exported="false" />
        <activity
            android:name="edu.alonso.andy_collection.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.alonso.andy_collection.GameDetailActivity"
            android:label="Game Details"
            android:parentActivityName="edu.alonso.andy_collection.GameListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.alonso.andy_collection.GameListActivity" />
        </activity>

        <activity
            android:name="edu.alonso.andy_collection.GameListActivity"
            android:label="Game List"
            android:parentActivityName="edu.alonso.andy_collection.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.alonso.andy_collection.MainActivity" />
        </activity>

    </application>

</manifest>