<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ef91a9"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context=".GameDetailActivity">

    <TextView
        android:id="@+id/txtGameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Game Title"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtGamePlatform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Platform"
        android:textSize="18sp"
        android:paddingBottom="4dp" />

    <TextView
        android:id="@+id/txtGameDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/btnBackToList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Game List" />

</LinearLayout>
