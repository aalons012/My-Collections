<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ef91a9"
    android:orientation="vertical"
    tools:context=".Steam_Collection">

    <!-- This will make the screen scrollable  -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="35dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="6"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="208dp"
                    android:layout_height="230dp"
                    android:layout_row="0"
                    android:src="@drawable/balatro"/>
                <Button
                    android:id="@+id/balatro_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Balatro"
                    android:textSize="45dp"
                    android:onClick="onClickBalatro"/>
                <ImageView
                    android:layout_width="208dp"
                    android:layout_height="230dp"
                    android:src="@drawable/skyrim"
                    android:layout_row="1"
                    android:layout_column="0"/>
                <Button
                    android:id="@+id/skyrim_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:text="Skyrim"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textSize="32dp"
                    android:onClick="onClickSkyrim"/>

                <ImageView
                    android:layout_width="208dp"
                    android:layout_height="230dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:src="@drawable/celeste" />

                <Button
                    android:layout_row="2"
                    android:layout_column="1"
                    android:id="@+id/celeste_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:text="Celeste"
                    android:textSize="30dp"
                    android:onClick="onClickCeleste"/>

                <ImageView
                    android:layout_width="208dp"
                    android:layout_height="230dp"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:src="@drawable/cookie_clicker" />

                <Button
                    android:id="@+id/switch_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:text="Cookie Clicker"
                    android:textSize="30dp"
                    android:layout_row="3"
                    android:onClick="onClickCClicker"/>

                <ImageView
                    android:layout_width="214dp"
                    android:layout_height="194dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:src="@drawable/schedule_1" />

                <Button
                    android:id="@+id/ps2_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:text="Schedule 1"
                    android:textSize="30dp"
                    android:onClick="onClickSchedule"/>

                <Button
                    android:id="@+id/back"
                    android:layout_width="107dp"
                    android:layout_height="110dp"
                    android:layout_marginBottom="44dp"
                    android:onClick="onClickBack"
                    android:text="←"
                    android:textSize="55sp"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>