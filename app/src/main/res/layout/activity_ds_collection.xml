<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ef91a9"
    android:orientation="vertical"
    tools:context=".ds_collection">

    <!-- This will make the screen scrollable  -->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="6"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="208dp"
                    android:layout_height="230dp"
                    android:layout_row="0"
                    android:src="@drawable/pokemon_platinum"/>
                <Button
                    android:id="@+id/pokemon_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:text="Pokemon Platinum"
                    android:textSize="30dp"
                    android:onClick="onClickPokemonPt"/>
                <ImageView
                    android:layout_width="208dp"
                    android:layout_height="230dp"
                    android:src="@drawable/pvz"
                    android:layout_row="1"
                    android:layout_column="0"/>
                <Button
                    android:id="@+id/pvz_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:text="Plants VS Zombies"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textSize="33dp"
                    android:onClick="onClickpvz"/>
                <ImageView
                    android:layout_width="208dp"
                    android:layout_height="230dp"
                    android:src="@drawable/pmd"
                    android:layout_row="2"
                    android:layout_column="0"/>
                <Button
                    android:layout_row="2"
                    android:layout_column="1"
                    android:id="@+id/pmd_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:text="Pokemon Mystery Dungeon: Explorers of Sky"
                    android:textSize="24dp"
                    android:onClick="onClickPMzD"/>
                <ImageView
                    android:layout_width="208dp"
                    android:layout_height="230dp"
                    android:src="@drawable/pokemon_white"
                    android:layout_row="3"
                    android:layout_column="0"/>
                <Button
                    android:id="@+id/White_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:text="Pokemon White"
                    android:textSize="30dp"
                    android:layout_row="3"
                    android:onClick="onClickWhite"/>

                <ImageView
                    android:layout_width="214dp"
                    android:layout_height="194dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:src="@drawable/pokemon_b2" />
                <Button
                    android:id="@+id/Black_button"
                    android:layout_width="208dp"
                    android:layout_height="225dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:text="Pokemon Black 2"
                    android:textSize="30dp"
                    android:onClick="onClickBlack"/>

                <Button
                    android:id="@+id/back"
                    android:layout_width="107dp"
                    android:layout_height="110dp"
                    android:layout_marginBottom="44dp"
                    android:onClick="onClickBack"
                    android:text="←"
                    android:textSize="55sp"/>

            </GridLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>